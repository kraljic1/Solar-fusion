---
import { t } from "i18next";
import i18next from "../i18n/config";

const { lang = "hr" } = Astro.params;

// Change language before rendering
if (lang) {
    await i18next.changeLanguage(lang);
}

// Pre-render translations to avoid render delay
const title = t("hero.title");
const subtitle = t("hero.subtitle");
const description = t("hero.description");
const ctaText = t("hero.cta") || "Izračunajte Vašu Uštedu";
const imageAlt =
    t("hero.imageAlt") ||
    "Solar panels installed in a beautiful landscape with mountains in the background";

// Define image paths for different screen sizes - set directly without query params
const mobileBgImage =
    "https://images.unsplash.com/photo-1509391366360-2e959784a276?q=80&w=1024&auto=format&fit=crop";
const desktopBgImage =
    "https://images.unsplash.com/photo-1509391366360-2e959784a276?q=80&w=2000&auto=format&fit=crop";
---

<section class="hero-section" role="banner" aria-labelledby="hero-heading">
    <!-- Preload critical hero image for better performance -->
    <link
        rel="preload"
        as="image"
        href={mobileBgImage}
        media="(max-width: 768px)"
        fetchpriority="high"
    />
    <link
        rel="preload"
        as="image"
        href={desktopBgImage}
        media="(min-width: 769px)"
        fetchpriority="high"
    />

    <!-- Inline critical CSS for faster rendering -->
    <style>
        .hero-section {
            position: relative;
            height: 100vh;
            min-height: 600px;
            max-height: 1080px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            background-image: url("https://images.unsplash.com/photo-1509391366360-2e959784a276?q=80&w=2000&auto=format&fit=crop");
            background-size: cover;
            background-position: center;
            overflow-x: hidden;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.6) 0%,
                rgba(0, 0, 0, 0.7) 75%,
                rgba(0, 0, 0, 0.8) 100%
            );
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            width: 100%;
            max-width: 100%;
            padding: 0 1rem;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1.1;
            margin-bottom: 1.5rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        }

        .hero-subtitle {
            display: block;
            color: #f59e0b;
            font-size: 2.25rem;
            font-weight: 700;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
        }

        .hero-description {
            color: #e5e7eb; /* Gray-200 */
            font-size: 1.25rem;
            max-width: 48rem;
            margin: 0 auto 3rem auto;
            font-weight: 300;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
        }

        .cta-button {
            display: inline-block;
            background-color: #f59e0b; /* Secondary color */
            color: white;
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 0.5rem;
            font-size: 1.125rem;
            transition: background-color 0.3s;
        }

        .cta-button:hover {
            background-color: rgba(245, 158, 11, 0.9);
        }

        /* Mobile optimizations */
        @media (max-width: 768px) {
            .hero-section {
                background-image: url("https://images.unsplash.com/photo-1509391366360-2e959784a276?q=80&w=1024&auto=format&fit=crop");
                max-width: 100vw;
                overflow-x: hidden;
            }

            .hero-content {
                padding: 0 1rem;
                width: 100%;
                box-sizing: border-box;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.75rem;
            }

            .hero-description {
                font-size: 1rem;
                padding: 0 1rem;
            }
        }
    </style>

    <!-- Hidden image for SEO - Background images aren't read by search engines -->
    <img
        src={desktopBgImage}
        alt={imageAlt}
        width="2000"
        height="1333"
        class="sr-only"
        loading="eager"
        fetchpriority="high"
    />

    <!-- Optimized background structure -->
    <div class="hero-overlay" aria-hidden="true"></div>

    <!-- Content container -->
    <div class="hero-content">
        <h1 class="hero-heading" id="hero-heading">
            <span class="hero-title">{title}</span>
            <span class="hero-subtitle" data-astro-cid-bbe6dxrz=""
                >{subtitle}</span
            >
        </h1>
        <p class="hero-description">{description}</p>
        <div class="hero-cta">
            <a href="#calculator" class="cta-button" data-nav-link="section">
                {ctaText}
            </a>
        </div>
    </div>
</section>

<script>
    // Handle smooth scrolling for the calculator link
    document.addEventListener("DOMContentLoaded", function () {
        document
            .querySelectorAll('[data-nav-link="section"]')
            .forEach((link) => {
                link.addEventListener("click", (e) => {
                    e.preventDefault();
                    const href = link.getAttribute("href");

                    if (href) {
                        const target = document.getElementById(
                            href.substring(1)
                        );
                        if (target) {
                            const navHeight =
                                document.querySelector("nav")?.offsetHeight ||
                                0;
                            const targetPosition =
                                target.getBoundingClientRect().top +
                                window.pageYOffset;
                            const offsetPosition = targetPosition - navHeight;

                            window.scrollTo({
                                top: offsetPosition,
                                behavior: "smooth",
                            });
                        }
                    }
                });
            });
    });
</script>

<style>
    /* Responsive adjustments */
    @media (min-width: 640px) {
        .hero-title,
        .hero-subtitle {
            font-size: 3rem;
        }
    }

    @media (min-width: 768px) {
        .hero-title,
        .hero-subtitle {
            font-size: 3.75rem;
        }

        .hero-description {
            font-size: 1.5rem;
        }
    }
</style>
