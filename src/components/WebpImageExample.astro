---
// Import the Image component from Astro
import { Image } from "astro:assets";
// Using an Unsplash image URL instead of a local file that doesn't exist
const imageUrl =
    "https://images.unsplash.com/photo-1508514177221-188b1cf16e9d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80";
---

<div class="image-container">
    <h2>Example WebP Image</h2>

    <!-- Using a direct img tag with the Unsplash URL instead of the Image component -->
    <img
        src={imageUrl}
        alt="Modern house with solar panels"
        width="500"
        height="300"
        loading="lazy"
    />

    <!-- Alternative approach using picture element with Unsplash URLs -->
    <picture>
        <source srcset={imageUrl + "&format=webp"} type="image/webp" />
        <source srcset={imageUrl} type="image/jpeg" />
        <img
            src={imageUrl}
            alt="Modern house with solar panels"
            width="500"
            height="300"
            loading="lazy"
        />
    </picture>
</div>

<style>
    .image-container {
        padding: 1rem;
        margin: 2rem 0;
        border-radius: 0.5rem;
        background-color: #f4f4f4;
    }

    h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
        font-weight: bold;
    }

    img {
        max-width: 100%;
        height: auto;
        border-radius: 0.25rem;
    }
</style>
