    { code: "it", flag: "ðŸ‡®ðŸ‡¹", name: "Italiano" },
    { code: "hu", flag: "ðŸ‡­ðŸ‡º", name: "Magyar" },
];

// Get current language from URL or default to 'hr'
const currentPath = Astro.url.pathname;
const currentLang = currentPath.split("/")[1] || "hr";
const currentLanguage =
    languages.find((lang) => lang.code === currentLang) || languages[0];
---

<!-- Super simple language selector -->
<div class="language-selector">
    <!-- Current language: just a regular div -->
    <div class="current-language">
        <span>{currentLanguage.flag}</span>
    </div>

    <!-- Dropdown menu with links -->
    <div class="language-dropdown">
        {
            languages.map((lang) => {
                // Calculate URL for this language
                const segments = currentPath.split("/").filter(Boolean);
                if (
                    segments.length > 0 &&
                    languages.some((l) => l.code === segments[0])
                ) {
                    segments.shift();
                }
                const url = `/${lang.code}${segments.length > 0 ? "/" + segments.join("/") : ""}`;

                return (
                    <a href={url} class="language-option">
                        <span>{lang.flag}</span>
                        <span>{lang.name}</span>
                    </a>
                );
            })
        }
    </div>
</div>

<style>
    /* Basic styles */
    .language-selector {
        position: relative;
        display: inline-block;
    }

    .current-language {
        cursor: pointer;
        padding: 8px 12px;
        font-size: 1.25rem;
        color: white;
    }

    .language-dropdown {
        display: none;
        position: absolute;
        right: 0;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        border-radius: 4px;
        overflow: hidden;
    }

    .language-option {
        color: #333;
        padding: 12px 16px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .language-option:hover {
        background-color: #f1f1f1;
    }

    /* Show dropdown on hover/focus */
    .language-selector:hover .language-dropdown,
    .language-selector:focus-within .language-dropdown {
        display: block;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .language-dropdown {
            right: -10px;
        }
    }
</style>
